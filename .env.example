# Alpaca API Keys (Paper Trading)
# Get these from: https://alpaca.markets/docs/trading/paper-trading/
ALPACA_PAPER_KEY_ID=your_paper_key_id_here
ALPACA_PAPER_SECRET=your_paper_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# News API Key (Free tier: 100 requests/day)
# Get from: https://newsapi.org
NEWS_API_KEY=your_newsapi_key_here

# Trading Mode
TRADING_MODE=paper  # Options: paper, live (NEVER use live without extensive testing)

# Risk Management
MAX_POSITION_SIZE=0.10  # 10% of portfolio per position
MAX_DAILY_LOSS=0.03     # 3% max daily loss
STOP_LOSS_PCT=0.05      # 5% stop loss per position
MAX_POSITIONS=5         # Maximum concurrent positions

# Logging
LOG_LEVEL=INFO          # Options: DEBUG, INFO, WARNING, ERROR
